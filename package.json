{
  "name": "vsx",
  "version": "0.6.0",
  "description": "Write reactive vanilla JavaScript in JSX.",
  "author": "Ayushman Chhabra <ayushmxn@outlook.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "src"
  ],
  "homepage": "https://github.com/ayushmxn/vsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayushmxn/vsx.git"
  },
  "scripts": {
    "format": "prettier --write ./src ./test",
    "lint": "eslint ./src/**/*.ts",
    "build": "tsup src/index.ts --minify --format cjs,esm --dts --clean",
    "demo": "pnpm build && esbuild ./test/demo/index.tsx --bundle --platform=node --outfile=./test/demo/index.js && serve ./test/demo",
    "test": "jest"
  },
  "keywords": [
    "JSX",
    "JavaScript"
  ],
  "engines": {
    "node": ">=18.15.0",
    "npm": ">=9.6.2"
  },
  "dependencies": {
    "uniqid": "5.4.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.2",
    "@types/node": "18.16.18",
    "@typescript-eslint/parser": "5.59.11",
    "esbuild": "0.18.2",
    "eslint": "8.42.0",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "jsdom": "22.1.0",
    "prettier": "2.8.8",
    "serve": "14.2.0",
    "ts-jest": "29.1.0",
    "tsup": "6.7.0",
    "typescript": "5.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      ".+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf",
    "singleAttributePerLine": true
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true
    },
    "parser": "@typescript-eslint/parser"
  }
}
