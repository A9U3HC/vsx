{
  "name": "vsx",
  "version": "0.7.0",
  "description": "Write vanilla JavaScript in JSX.",
  "author": {
    "name": "Ayush C.",
    "url": "https://ayushmanchhabra.com"
  },
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "src"
  ],
  "homepage": "https://github.com/ayushmxn/vsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayushmxn/vsx.git"
  },
  "scripts": {
    "format": "prettier --write ./src ./test",
    "lint": "eslint ./src/**/*.ts",
    "build": "tsup src/index.ts --minify --format cjs,esm --dts --clean",
    "demo": "pnpm build && esbuild ./test/demo/index.tsx --bundle --platform=node --outfile=./test/demo/index.js && serve ./test/demo",
    "test": "jest"
  },
  "keywords": [
    "JSX",
    "JavaScript"
  ],
  "engines": {
    "node": ">=v18.16.1",
    "npm": ">=9.8.0"
  },
  "dependencies": {
    "uniqid": "5.4.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.3",
    "@types/node": "18.17.5",
    "@typescript-eslint/parser": "6.3.0",
    "esbuild": "0.19.2",
    "eslint": "8.47.0",
    "jest": "29.6.2",
    "jest-environment-jsdom": "29.6.2",
    "jsdom": "22.1.0",
    "prettier": "3.0.1",
    "serve": "14.2.0",
    "ts-jest": "29.1.1",
    "tsup": "7.2.0",
    "typescript": "5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      ".+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf",
    "singleAttributePerLine": true
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true
    },
    "parser": "@typescript-eslint/parser"
  }
}
