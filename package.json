{
  "name": "transform-jsx",
  "version": "0.0.0",
  "description": "Transform JSX into vanilla JavaScript",
  "main": "bin/index.js",
  "scripts": {
    "build": "esbuild ./src/index.ts --bundle --outfile=./bin/index.js",
    "demo": "esbuild ./test/demo/index.tsx --bundle --outfile=./test/demo/index.js && serve ./test/demo",
    "lint": "ts-standard ./src/*.ts --fix",
    "test": "jest"
  },
  "keywords": [],
  "author": "Ayushman Chhabra <ayushmxn@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^8.11.3",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.16",
    "esbuild": "^0.14.20",
    "jest": "^27.5.1",
    "jsdom": "^19.0.0",
    "serve": "^13.0.2",
    "ts-jest": "^27.1.3",
    "ts-standard": "^11.0.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "jsdom"
  }
}
