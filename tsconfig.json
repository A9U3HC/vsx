{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["DOM", "DOM.Iterable", "ES2017"],
        "jsx":"preserve",
        "jsxFactory": "createElement",
        "jsxFragmentFactory": "createFragment",
        "moduleResolution": "node",
        "isolatedModules": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
